{
    "identifier": "default",
    "description": "Default permissions for the app",
    "local": true,
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "shell:allow-open",
        "fs:default",
        "dialog:default",
        "http:default",
        {
            "identifier": "fs:allow-write-file",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        }
    ]
}